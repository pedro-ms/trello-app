<div class="row">
  {{#each model as |task|}}
    <div class="col-sm-3">
      <div class="panel panel-default">
        <div class="panel-body text-center">
          <p>Name: <b>{{task.name}}</b></p>
          <p>Story: {{task.story.title}}</p>
        </div>
        <div class="panel-footer text-center">
          {{#link-to 'tasks.view' task.id class='btn btn-success btn-xs'}}View{{/link-to}}
          {{#link-to 'tasks.edit' task.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteTask' task}}>Delete</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
