<h2 class="col-md-offset-1 text-center">Add a new Task</h2>
<div class="col-md-6 col-md-offset-3">
  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        {{input type="text" value=model.task.name class="form-control" placeholder="The name of the Task"}}
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Story</label>
      <div class="col-sm-10">
        <select  class="form-control" onchange={{action "selectStory" value="target.value"}}>
          <option value={{story.id}}>
            Select story
          </option>
          {{#each model.stories as |story|}}
            <option value={{story.id}}>
              {{story.title}}
            </option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'saveTask' model.task}} disabled="{{unless model.task.isValid true}}">Add Task</button>
      </div>
    </div>
  </div>
</div>
