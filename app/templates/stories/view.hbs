<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">
      <b>Story: {{model.title}} </b>
    </h1>
  </div>
  <div class="panel-body">
    <b>Date: {{model.dueDate}} </b>
    <h2><b>Tasks:</b></h2>
    <div class="row">
      {{#each model.tasks as |task|}}
        <div class="col-sm-3">
          <div class="panel panel-default">
            <div class="panel-body text-center">
              <p>Name: <b>{{task.name}}</b></p>
              <p>Story: {{task.story.title}}</p>
            </div>
            <div class="panel-footer text-center">
              {{#link-to 'stories.view.edit-task' task.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
              <button class="btn btn-danger btn-xs" {{action 'deleteTask' task}}>Delete</button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
