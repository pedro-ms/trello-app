<div>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th class="col-md-5 col-md-offset-2 text-center">Title</th>
        <th class="col-md-4 col-md-offset-2 text-center">Date</th>
        <th class="col-md-4 col-md-offset-2 text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |story|}}
      <tr>
        <th>{{story.title}}</th>
        <th>{{story.dueDate}}</th>
        <th class="text-center">
          {{#link-to 'stories.view' story.id class='btn btn-success btn-xs'}}View{{/link-to}}
          {{#link-to 'stories.edit' story.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteStory' story}}>Delete</button>
        </th>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
